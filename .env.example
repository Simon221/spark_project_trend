# ============================================
# KNOX GATEWAY CONFIGURATION
# ============================================
KNOX_HOST=mespmasterprd3.orange-sonatel.com:8443
AD_USER=your_ldap_username
AD_PASSWORD=your_ldap_password

# ============================================
# SPARK CONFIGURATION
# ============================================
DRIVER_MEMORY=4g
DRIVER_CORES=2
EXECUTOR_MEMORY=4g
EXECUTOR_CORES=2
NUM_EXECUTORS=4
QUEUE=root.datalake

# ============================================
# JAR DE RATTRAPAGE
# ============================================
RECOVERY_JAR_PATH=hdfs://path/to/recovery.jar
RECOVERY_JAR_CLASS=com.orange.sonatel.Recovery

# ============================================
# LLM CONFIGURATION - OPENAI GPT-4o
# ============================================
# Obtenir votre clé: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_ACTUAL_KEY_HERE
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0

# Modèles disponibles:
# - gpt-4o (le plus récent, multimodal)
# - gpt-4-turbo (rapide et performant)
# - gpt-4 (stable)
# - gpt-3.5-turbo (rapide et économique)

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
